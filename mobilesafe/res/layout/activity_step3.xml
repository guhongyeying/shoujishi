<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        xmlns:dtextview="http://schemas.android.com/apk/res/com.example.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    tools:context="com.example.mobilesafe.activity.Step3Activity" >


    <TextView
        style="@style/TitleStyle"
        android:text="3.设置安全号码" />
       <TextView 
     style="@style/ContentStyle"
     android:drawableLeft="@android:drawable/star_big_on"
     android:text="报警短信会发送个安全号码"/>
   <EditText 
       android:id="@+id/et_phone"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text=""/>
   <Button 
       android:onClick="seletContact"
       android:background="@drawable/btn_green_selector"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="选择联系人"/>
  
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center">
       <ImageView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
          android:src="@android:drawable/presence_offline"
           />
       <ImageView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
          android:src="@android:drawable/presence_offline"
           />
       <ImageView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
          android:src="@android:drawable/presence_online"
           />
       <ImageView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
          android:src="@android:drawable/presence_offline"
           />
   </LinearLayout>
   
   <RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1">
       
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/setup3" />
        <Button style="@style/PreviousStyle"/>
        <Button style="@style/NextStyle"/>
   </RelativeLayout>
</LinearLayout>
